@page
@model LoginModel

@{
    ViewData["Title"] = "Controle de Acesso";
    Layout = "LayoutLogin";
}


<div style="margin-left:20%">
    <img src="~/img/img_bancoGeneroso.png" />
</div>

<div class="row" style="padding:20px;margin-left:30%;padding-top:5%;">

    <div class="col-md-6">
        <section>
            <form id="account" method="post">
                    <center><h3>@ViewData["Title"]</h3></center> 

                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <div style="display:flex;">
                            <div style="margin-right:15px;font-weight:bold;">
                                <label asp-for="Input.Email"></label>
                            </div>
                            <input asp-for="Input.Email" class="form-control" />

                        </div>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <div style="display:flex;">
                            <div style="margin-right:10px;font-weight:bold;">
                                <label asp-for="Input.Password"></label>
                            </div>
                            <input asp-for="Input.Password" class="form-control" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group" style="float:right;">
                        <button type="submit" class="btn btn-primary">Entrar</button>
                    </div> 
            </form>
        </section>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
