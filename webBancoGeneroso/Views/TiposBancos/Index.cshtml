<h1>Cadastro de Bancos</h1>


<div style="float: right;">
    <p>
        <a asp-action="Create" class="btn btn-primary">Novo Banco</a>
    </p>
</div>


<table class="table">
    <thead>
        <tr>
            <th>
                <span>Nome do Banco</span>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Codigo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th> 
            <th></th>
        </tr>
    </thead>
    <tbody>

        @if (Model.Count() <= 0)
        {
            <tr>
                <td>
                    <span>Nenhum item cadastrado.</span>
                </td>
            </tr>

        }
        else
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td width="30%">
                        @Html.DisplayFor(modelItem => item.Codigo)
                    </td>
                    <td width="40%">
                        @Html.DisplayFor(modelItem => item.Nome)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-light">Editar</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Detalhar</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Excluir</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
