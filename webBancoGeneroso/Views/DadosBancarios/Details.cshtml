@model webBancoGeneroso.Models.DadosBancarios

@{
    ViewData["Title"] = "Details";
}


<h1>Detalhes dos Dados Bancários</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            <span>Banco</span>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TiposBancos.Codigo) 
            <span> - </span>
            @Html.DisplayFor(model => model.TiposBancos.Nome)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Agencia)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Agencia)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Numero)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Numero)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CNPJ)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CNPJ)
        </dd>


        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RazaoSocial)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RazaoSocial)
        </dd>


    </dl>
</div>
<div class="col-md-8" style="float:right; width:100%;">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Editar</a>
    <a asp-action="Index" class="btn btn-light">Voltar</a>
</div>
