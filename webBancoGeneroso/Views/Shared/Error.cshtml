@model ErrorViewModel
@{
    ViewData["Title"] = Model == null ? "Ocorreu um Erro!" : Model.Titulo;
}

@if (Model == null)
{
    <p>
        <h2>Atenção! Ocorreu um erro. Contate o administrador do sistema.</h2>
    </p>
}
else
{
    <h1 >@Html.Raw(Model.Titulo)</h1>
    <h2 class="text-danger">@Html.Raw(Model.Mensagem)</h2>
}